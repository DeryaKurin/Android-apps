<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a game to play"
        tools:layout_editor_absoluteX="85dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="104dp" />

    <Button
        android:id="@+id/buttonPick4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PICK 4"
        android:onClick="onPick4Click"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/buttonPB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Power Ball"
        android:onClick="onPBClick"
        app:layout_constraintTop_toBottomOf="@+id/buttonPick4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:onClick="onClickPlay"
        app:layout_constraintTop_toBottomOf="@+id/buttonPB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="453dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by Derya O.Kurin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>