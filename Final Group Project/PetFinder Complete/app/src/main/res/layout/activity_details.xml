<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:fillViewport="true"
    tools:context=".ui.details.DetailsActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Detail Information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvDetails"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imageViewPet"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDetails"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            android:layout_height="350dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPet"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:text="details"
            android:id="@+id/tvAnimalDetails"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvAnimalDetails"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:text=""
            android:id="@+id/tvOrganizationName"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="0dp"
            android:id="@+id/btnRequest"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Request"
            android:background="@color/colorBtn"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/btnSendEmail"
            app:layout_constraintTop_toBottomOf="@+id/tvAnimalDetails"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="0dp"
            android:background="@color/colorBtn"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="2dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toEndOf="@+id/btnRequest"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Send TO Email"
            app:layout_constraintTop_toBottomOf="@+id/tvAnimalDetails"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>